<style>
    .login {
        width:300px;
        height:350px;
        border:1px solid gray;
        margin:0 auto;
        margin-top:100px;
        border-radius:15px;
    }
    h2 {
        text-align:center;
        margin-bottom:30px;
        margin-top:40px;
    }
    .login input {
        width:250px;
        margin: 0 auto;
    }
    .btn {
        margin-left:16%;
        width:200px;
        background-color:mediumblue;
        color: snow;
        margin-top:20px;
    }
</style>
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Login.cshtml";
}
<div>
    <div class="login">
        <h2>Đăng Nhập Admin</h2>
        <h4 style="color:red; text-align: center">@ViewBag.ThongBao</h4>
        <div class="form-bottom">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <div class="form-group">

                    <input type="text" placeholder="username..." name="username" class="form-username form-control" id="form-username">
                    @ViewData["Loi1"]
                </div>
                <div class="form-group">

                    <input type="password" placeholder="Password..." name="password" class="form-password form-control" id="form-password">
                    @ViewData["Loi2"]
                </div>

                <button type="submit" class="btn">Đăng Nhập</button>
            }
        </div>

    </div>

</div>

