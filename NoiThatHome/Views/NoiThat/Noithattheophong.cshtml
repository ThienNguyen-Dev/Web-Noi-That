
@{
    ViewBag.Title = "Noithattheophong";
    Layout = "~/Views/Shared/_UserNoiThat.cshtml";
}

<div class="grid wide">
    <div class="row">
        <div class="col l-3 m-6 c-12 ">

            @Html.Action("Loaiphong", "NoiThat")
            @Html.Action("Loai", "NoiThat")

        </div>
        <div class="col l-9 m-6 c-0 ">
            <div id="slides" class="carousel slides" data-ride="carousel">
                <ul class="carousel-indicators">
                    <li data-target="#slides" data-slide-to="0" class="active"></li>
                    <li data-target="#slides" data-slide-to="1"></li>
                    <li data-target="#slides" data-slide-to="2"></li>
                    <li data-target="#slides" data-slide-to="3"></li>
                    <li data-target="#slides" data-slide-to="4"></li>
                    <li data-target="#slides" data-slide-to="5"></li>
                </ul>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Images/1.jpg">
                    </div>
                    <div class="carousel-item ">
                        <img src="~/Images/2.jpg">
                    </div>
                    <div class="carousel-item ">
                        <img src="~/Images/3.jpg">
                    </div>
                    <div class="carousel-item ">
                        <img src="~/Images/4.jpg">
                    </div>
                    <div class="carousel-item ">
                        <img src="~/Images/5.jpg">
                    </div>
                    <div class="carousel-item ">
                        <img src="~/Images/6.jpg">
                    </div>
                </div>
            </div>
        </div>
        <div class="col l-12 m-12 c-12 ">
            <div id="text">
                <h1>Loại Phòng</h1>
            </div><hr>
        </div>
        <div class="col l-12">
            <div class="content">
                <div class="row">
                    @foreach (var noithatmoi in Model)
                    {
                        <div class="col l-4 m-12 c-12 ">
                            <div class="item">
                                <a href="@Url.Action("TenNoiThat","NoiThat",new {id=noithatmoi.MaNoiThat })">
                                    <img src="~/Images/@noithatmoi.Anhbia" alt="@noithatmoi.TenNoiThat" width="600">
                                </a>
                            </div>
                            <div class="caption">
                                <a href="@Url.Action("TenNoiThat","NoiThat",new {id=noithatmoi.MaNoiThat })">
                                    <h4 style="text-align:center">@noithatmoi.TenNoiThat</h4>
                                </a>
                                <h4 class="pul" style="text-align:center">@String.Format("{0:0,0}", noithatmoi.Giaban) VNĐ</h4>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>