@using NoiThatHome.Models
@using PagedList.Mvc;
@model PagedList.PagedList<NOITHAT>

@{
    ViewBag.Title = "Sanpham";
    Layout = "~/Views/Shared/_UserNoiThat.cshtml";
}

<div class="grid wide">
    <div class="row">
        <div class="col l-3 m-6 c-12 ">

            @Html.Action("Loaiphong", "NoiThat")
            @Html.Action("Loai", "NoiThat")

        </div>
        <div class="col l-9 m-6 c-0 ">
            <div id="slides" class="carousel slides" data-ride="carousel">
                <ul class="carousel-indicators">
                    <li data-target="#slides" data-slide-to="0" class="active"></li>
                    <li data-target="#slides" data-slide-to="1"></li>
                    <li data-target="#slides" data-slide-to="2"></li>
                    <li data-target="#slides" data-slide-to="3"></li>
                    <li data-target="#slides" data-slide-to="4"></li>
                    <li data-target="#slides" data-slide-to="5"></li>
                </ul>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Images/1.jpg">
                    </div>
                    <div class="carousel-item ">
                        <img src="~/Images/2.jpg">
                    </div>
                    <div class="carousel-item ">
                        <img src="~/Images/3.jpg">
                    </div>
                    <div class="carousel-item ">
                        <img src="~/Images/4.jpg">
                    </div>
                    <div class="carousel-item ">
                        <img src="~/Images/5.jpg">
                    </div>
                    <div class="carousel-item ">
                        <img src="~/Images/6.jpg">
                    </div>
                </div>
            </div>
        </div>
        <div class="col l-12 m-12 c-12 ">
            <div id="text">
                <h1>Sản Phẩm</h1>
            </div><hr>
        </div>
        <div class="col l-12">
            <div class="content">
                <div class="row">
                    @foreach (var noithat in Model)
                    {
                        <div class="col l-4 m-12 c-12 ">
                            <div class="item">
                                <a href="@Url.Action("TenNoiThat","NoiThat",new {id=noithat.MaNoiThat })">
                                    <img src="~/Images/@noithat.Anhbia" alt="@noithat.MaNoiThat" width="600">
                                </a>
                            </div>
                            <div class="caption">
                                <a href="@Url.Action("TenNoiThat","NoiThat",new {id=noithat.MaNoiThat })">
                                    <h4 style="text-align:center">@noithat.TenNoiThat</h4>
                                </a>
                                <h4 class="pul" style="text-align:center">@String.Format("{0:0,0}",noithat.Giaban) VNĐ</h4>
                            </div>
                        </div>
                    }

                </div>
                @*Tạo liên kết các trang*@
                Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
                <div class="MenuTrang">

                    @Html.PagedListPager(Model,page=>Url.Action("Sanpham",new {page=page}))
                </div>
                <style>
                    .MenuTrang {
                        width: 400px;
                        margin: auto;
                        text-align: center;
                    }

                    .pagination {
                        width: 400px;
                        margin-left: 100px;
                    }

                        .pagination a {
                            display: block;
                            color: black;
                            float: left;
                            padding: 8px 16px;
                            text-decoration: none;
                            transition: background-color .3s;
                        }

                            .pagination a.active {
                                background-color: #4CAF50;
                                color: blue;
                            }

                            .pagination a:hover:not(.active) {
                                background-color: orange;
                            }
                </style>
            </div>
        </div>
    </div>
</div>

